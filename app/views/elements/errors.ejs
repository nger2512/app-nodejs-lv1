<% if(errors){ %>
    <div class="row">
        <div class="col-lg-6">
            <div class="alert alert-danger" role="alert">
                <ul>
                    <% 
                        errors.forEach((error)=>{
                            let arrWord = error.param.split('_');
                            let words = '';
                            arrWord.forEach((word)=>{
                                words += word.charAt(0).toUpperCase() +word.slice(1)+ " ";
                            }); 
                        %>
                            
                        <li><b><%= words %></b>:<%= error.msg %></li>
                   <% })%>
                </ul>
            </div>
        </div>
    </div>
<%}%>

